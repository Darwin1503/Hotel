<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registrar">

    <VideoView
        android:id="@+id/w_fondo3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="-5dp"
        android:layout_marginRight="-5dp"
        android:focusableInTouchMode="false" />

    <EditText
        android:id="@+id/txt_registro_pass"
        android:layout_width="330dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="506dp"
        android:layout_marginEnd="41dp"
        android:background="@drawable/estilo_bordes_editext"
        android:backgroundTint="#FDFDFC"
        android:ems="10"
        android:hint="    Contraseña"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/txt_registro_acompa"
        android:layout_width="330dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="552dp"
        android:layout_marginEnd="42dp"
        android:background="@drawable/estilo_bordes_editext"
        android:backgroundTint="#FDFDFC"
        android:ems="10"
        android:hint="    Número de acompañantes"
        android:inputType="number" />

    <EditText
        android:id="@+id/txt_registro_correo"
        android:layout_width="330dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="461dp"
        android:layout_marginEnd="37dp"
        android:background="@drawable/estilo_bordes_editext"
        android:backgroundTint="#FDFDFC"
        android:ems="10"
        android:hint="    Correo"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/txt_registro_username"
        android:layout_width="330dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="416dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/estilo_bordes_editext"
        android:backgroundTint="#FDFDFC"
        android:ems="10"
        android:hint="    Nombre de usuario"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/id_registro"
        android:layout_width="330dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/estilo_bordes_editext"
        android:backgroundTint="#FDFDFC"
        android:ems="10"
        android:hint="    ID"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="196dp"
        android:layout_height="155dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="92dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="123dp"
        android:background="@drawable/register"
        android:text="" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="132dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="98dp"
        android:text="Registro"
        android:textColor="#053742"
        android:textSize="34sp" />

    <EditText
        android:id="@+id/nom_registro"
        android:layout_width="330dp"
        android:layout_height="39dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="326dp"
        android:layout_marginEnd="37dp"

        android:background="@drawable/estilo_bordes_editext"

        android:backgroundTint="#FDFDFC"
        android:ems="10"

        android:hint="    Nombre"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/pais_registro"
        android:layout_width="330dp"
        android:layout_height="39dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="370dp"
        android:layout_marginEnd="37dp"

        android:background="@drawable/estilo_bordes_editext"

        android:backgroundTint="#FDFDFC"
        android:ems="10"

        android:hint="    Pais"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/Registro"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="122dp"
        android:layout_marginTop="604dp"
        android:layout_marginEnd="145dp"
        android:backgroundTint="#053742"
        android:onClick="registrar"
        android:text="Registrar" />

</RelativeLayout>